package main;
 
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.OutputStream;
import java.util.Properties;

public class app {
  public static void main(String[] args) {
	
	Properties prop = new Properties();
	OutputStream output = null;

	try {

		output = new FileOutputStream("/Users/Alston/Documents/CODES/LargeScale/largeScale3/src/main/phone.properties");

		// set the properties value
		prop.setProperty("Alston", "111-222-3344");
		prop.setProperty("Caleb", "111-222-3344");
		prop.setProperty("John", "111-222-3344");

		// save properties to project root folder
		prop.store(output, null);

	} catch (IOException io) {
		io.printStackTrace();
	} finally {
		if (output != null) {
			try {
				output.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}

	}
  }
}








